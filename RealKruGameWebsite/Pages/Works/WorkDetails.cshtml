@page
@model RealKruGameWebsite.Pages.Works.WorkDetailsModel
@{
    ViewData["Title"] = "Details";
    var photoPath = "~/workimages/" + (Model.Work.PhotoPath ?? "noimage.png");
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Work.Title</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true" />
                <h4>@Model.Work.Description</h4>
                <h4>Start: @Model.Work.StartDate</h4>
                <h4>End: @Model.Work.EndDate</h4>
            </div>


            <div class="card-footer text-center">
                <a asp-page="Work"
                   class="btn btn-primary">Back</a>
            </div>
        </div>
    </div>
</div>